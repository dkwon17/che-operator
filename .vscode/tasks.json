{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile che-operator code",
            "command": "CGO_ENABLED=0 GOOS=linux GOARCH=amd64 GO111MODULE=on go build -a -o /tmp/che-operator/che-operator main.go",
            "options": {
                "env": {
                    "ARCH": "amd64"
                }
            },
            "type": "shell",
            "args": [],
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Format che-operator code",
            "command": "go fmt ./...",
            "options": {
                "env": {
                    "ARCH": "amd64"
                }
            },
            "type": "shell",
            "args": [],
